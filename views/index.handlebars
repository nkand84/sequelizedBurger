<header>
    <div>
        <h1>Eat-Da-Burger!</h1>
    </div>
    <form class="form-inline" id="create-form">

        <div class="form-group">
            <label for="burg"></label>
            <input type="text" class="form-control" id="burg">
        </div>&nbsp;&nbsp;
        <button type="submit" class="btn btn-default">Create a Burger</button>
    </form>
</header>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8 col-xs-12">
            <div class="row">
                <div class="col-sm-1 col-xs-0"></div>
                <div class="col-sm-5 col-xs-12" id="to-eat">
                    <h2 class="text-center special">burgers to eat!</h2>

                    <ul>
                        {{#each Burgers}} {{#unless devoured}}
                        <button type="submit" id="change-devour" class="btn btn-success btn-devour" data-id="{{id}}" data-newdevour="{{devour}}">Devour</button>
                        <p class="para"> {{burger_name}} </p>
                                      
                        {{/unless}} {{/each}}
                    </ul>
                </div>
                <div class="col-sm-1 col-xs-0"></div>
                <div class="col-sm-5 col-xs-12" id="eaten">
                    <h2 class="text-center special">Eaten! Yum!</h2>
                    <ul class="text-center">

                        {{#each Burgers}} {{#if devoured}}
                        <p class="para" id="show-me"> {{this.burger_name}}</p>
                        {{/if}} {{/each}}

                    </ul>
                </div>
            </div>
        </div>

        <div class="col-sm-4 col-xs-0">

        </div>
    </div>
</div>
<footer>
    <small>&copy; Nitya Kandukuri</small>
</footer>